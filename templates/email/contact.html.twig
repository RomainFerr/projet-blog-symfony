{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
    <h1>Contacter un admin</h1>
    {{ form_start(formContact) }}
    <div class="row">
        <div class="col-3">
        {{ form_row(formContact.nom) }}</div>
        <div class="col-3"> {{ form_row(formContact.prenom) }}</div>


        <div class="col-6">  {{ form_row(formContact.email) }}  </div>  </div>
    {{ form_row(formContact.objet) }}
    {{ form_row(formContact.contenu) }}

    <input type="submit" class="btn btn-info text-white mt-5" value="Envoyer">
    {{ form_end(formContact) }}
{% endblock %}

