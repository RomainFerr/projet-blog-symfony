{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Liste des articles de la catégorie : {{ categorie.titre |upper }}</h1>
    <div class="container">
        <h5 class="fst-italic">{{ categorie.articles | length }} articles trouvés</h5>
        <ul class="list-group ">
            {% for article in categorie.articles | sort %}
                <li class="list-group-item list-group-item-action list-group-item-light m-2 rounded">
                    <a class="text-decoration-none text-dark" href="{{ path('app_article_slug',{'slug': article.slug }) }}">
                        <p class="h5 fst-bolder text-dark">{{ article.titre | upper }} </p>
                        <p class="fst-italic text-secondary">{{ article.createdAt | date("d/m/Y")  }}</p>
                        <p >{{ article.contenu }}</p>
                    </a>
                </li>
            {% endfor %}
        </ul></div>
{% endblock %}



