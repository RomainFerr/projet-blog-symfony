{% extends 'base.html.twig' %}

{% block title %}Liste des Categories{% endblock %}

{% block body %}
    <h1>Liste des Cat√©gories</h1>
    <div class="container">
        <ul class="list-group ">
            {% for categorie in categories %}
             <a class="list-group-item list-group-item-secondary m-1 d-flex justify-content-between rounded align-items-center border-0"  href="{{ path('app_categorie_slug',{'slug': categorie.slug}) }}">
