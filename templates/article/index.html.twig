{% extends 'base.html.twig' %}

{% block title %}Liste des Articles{% endblock %}

{% block body %}
<h1>Liste des Articles</h1>
    <a class="btn btn-primary" href="{{ path('app_articles_nouveau') }}">Cr√©er un article</a>
    <div class="container mt-3">
    <ul class="list-group ">
        {% for article in articles %}
           <a class="list-group-item list-group-item-action list-group-item-dark m-2 badge" href="{{ path('app_article_slug',{'slug': article.slug}) }}"><p>{{ article.titre }}</p></a>
        {% endfor %}
    </ul></div>
    <div class="navigation d-flex justify-content-center mt-2 fixed-bottom">
        {{ knp_pagination_render(articles) }}
    </div>
{% endblock %}
